<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".AddTarantula">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/addimage" />

    <EditText
        android:id="@+id/tarantulaSpecies"
        android:layout_width="370dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="400dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Species"
        android:inputType="textPersonName"
        android:padding="10sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/tarantulaOrigin"
        android:layout_width="370dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="400dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="County of origin"
        android:inputType="textPersonName"
        android:padding="10sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarantulaName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/tarantulaName"
        android:layout_width="370dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="400dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="10sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarantulaSpecies"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="84dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Temper: "
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarantulaOrigin" />

    <RadioGroup
        android:id="@+id/temperGroup"
        android:layout_width="188dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/tarantulaOrigin">

        <RadioButton
            android:id="@+id/temper1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#FF0000"
            android:text="1"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/temper2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#CD4317"
            android:text="2"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/temper3"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#FF693A"
            android:text="3"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/temper4"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#FFC107"
            android:text="4"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/temper5"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#8BC34A"
            android:text="5"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/temper6"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#00FD0A"
            android:text="6"
            android:textSize="0sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Urticating hairs: "
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="84dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Venom: "
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <RadioGroup
        android:id="@+id/venomGroup"
        android:layout_width="94dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/temperGroup">

        <RadioButton
            android:id="@+id/venom1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#FF0000"
            android:text="1"
            tools:text="1" />

        <RadioButton
            android:id="@+id/venom2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#FFC107"
            android:text="2"
            tools:text="2" />

        <RadioButton
            android:id="@+id/venom3"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:buttonTint="#00FD0A"
            android:text="3"
            tools:text="3" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/urticatingCheckBox"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/venomGroup" />

    <Button
        android:id="@+id/addTarantulaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTarantulaBtn"
        tools:visibility="invisible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
